@using GestorPacientes.Core.Application.ViewModels.Usuario;
@model UsuarioSaveViewModel;
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">Esta seguro que desea eliminar este Medico?</div>
            <div class="card-body">
                <form asp-controller="User" asp-action="DeletePost" method="post">

                    <input asp-for="Id" type="hidden">

                    <button type="submit" class="btn btn-danger">Eliminar</button>

                    <a asp-controller="User" asp-action="Index" class="btn btn-warning">Cancelar</a>
                </form>

                
            </div>
        </div>
    </div>
</div>


