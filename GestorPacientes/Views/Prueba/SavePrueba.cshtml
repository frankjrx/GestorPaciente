@model GestorPacientes.Core.Application.ViewModels.Prueba.SavePruebaViewModel;
@{
	bool CreateMode = Model.Id == 0 ? true : false;

}
<div class="row">
	<div class="col-6 offset-3">
		<div class="card">
			<div class="card-header bg-dark text-light">
				@(CreateMode? "Registrat Prueba": $"Editando prueba {Model.Nombre}")
			</div>
			<div class="card-body">
				<form asp-controller="Prueba" asp-action="@(CreateMode? "Create" : "Edit")">

					<input asp-for="Id" type="hidden">

					<div class="mb-3">
						<label asp-for="Nombre" class="form-label">Nombre:</label>
						<input asp-for="Nombre" class="form-control">
						<span asp-validation-for="Nombre" class="text-danger"></span>
					</div>

					<button type="submit" class="btn btn-primary">Guardar</button>
					<a asp-controller="Prueba" asp-action="Index" class="btn btn-warning">Volver atras</a>
				</form>
			</div>
		</div>
	</div>
</div>